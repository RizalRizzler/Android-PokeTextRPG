<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F0F0F0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Adventure"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="32dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/etPlayerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Player Name"
            android:inputType="textPersonName"
            android:singleLine="true"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Starter:"
        android:textSize="18sp"
        android:layout_marginBottom="12dp"/>

    <RadioGroup
        android:id="@+id/rgStarter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="32dp">

        <RadioButton
            android:id="@+id/rbTreecko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Treecko (Grass)"
            android:checked="true"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/rbTorchic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Torchic (Fire)"
            android:textSize="16sp"/>

        <RadioButton
            android:id="@+id/rbMudkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mudkip (Water)"
            android:textSize="16sp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnStartAdventure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Journey"
        android:textSize="18sp"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"/>

</LinearLayout>